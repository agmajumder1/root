    <fields>
        <fullName>Account_Company_ID__c</fullName>
        <description>The Account Company ID for which Suspensions are applicable. This can be applicable for both Parent and Child Accounts of a given Account Company ID. For Example, If Account Company ID is defined as &apos;HNSDWAYISP&apos;, it is applicable for all consumer accounts below this Account Company ID. If left blank, it is applicable for all accounts</description>
        <externalId>false</externalId>
        <label>Account Company ID</label>
        <length>80</length>
        <required>false</required>
        <trackTrending>false</trackTrending>
        <type>Text</type>
        <unique>false</unique>
    </fields>
    <fields>
        <fullName>Account__c</fullName>
        <deleteConstraint>SetNull</deleteConstraint>
        <description>The specific Account to which Suspension settings are being defined. If left blank, it is applicable for all Accounts.</description>
        <externalId>false</externalId>
        <label>Account</label>
        <referenceTo>Account</referenceTo>
        <relationshipLabel>Manage Suspensions</relationshipLabel>
        <relationshipName>Manage_Suspensions</relationshipName>
        <required>false</required>
        <trackTrending>false</trackTrending>
        <type>Lookup</type>
    </fields>
    <fields>
        <fullName>ECC_Team__c</fullName>
        <description>Executive Customer Care team</description>
        <externalId>false</externalId>
        <label>Exclude for Queues</label>
        <required>false</required>
        <trackTrending>false</trackTrending>
        <type>MultiselectPicklist</type>
        <valueSet>
            <restricted>true</restricted>
            <valueSetName>ECC_Team</valueSetName>
        </valueSet>
        <visibleLines>4</visibleLines>
    </fields>
    <fields>
        <fullName>HSvc_ActiveFormula__c</fullName>
        <description>determines whether active or not</description>
        <externalId>false</externalId>
        <formula>AND( 
HSvc_ExpiryDate__c &gt;= TODAY(), 
HSvc_EffectiveDate__c &lt;= TODAY() 
)</formula>
        <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
        <label>Active</label>
        <trackTrending>false</trackTrending>
        <type>Checkbox</type>
    </fields>
    <fields>
        <fullName>HSvc_EffectiveDate__c</fullName>
        <description>The Date From which this rule is applicable</description>
        <externalId>false</externalId>
